<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonScanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/buttonScanning"
        android:onClick="startScanning" />

    <Button
        android:id="@+id/buttonPositioning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonScanning"
        android:layout_centerHorizontal="true"
        android:text="@string/buttonPositioning"
        android:onClick="startPositioning" />

</RelativeLayout>